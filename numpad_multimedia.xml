<?xml version="1.0"?>
<root>
	<item>
		<name>&#x1f522;&#x1f3b5; Left Ctrl + Numeric Keypad for Media control </name>
		<item>
			<name>Left Ctrl + Keypad Plus/Minus/Enter as Volume keys</name>
			<appendix>&#x27e6;+&#x27e7;: &#x1f50a;    Vol Up</appendix>
			<appendix>&#x27e6;-&#x27e7;: &#x1f509;    Vol Down</appendix>
			<appendix>&#x27e6;Enter&#x27e7;: &#x1f507;    Mute</appendix>
			<identifier>private.LCtrlKeypadVolume</identifier>
			<autogen>
				__KeyToKey__
				KeyCode::KEYPAD_MINUS, ModifierFlag::CONTROL_L | ModifierFlag::NONE,
				ConsumerKeyCode::VOLUME_DOWN
			</autogen>
			<autogen>
				__KeyToKey__
				KeyCode::KEYPAD_PLUS, ModifierFlag::CONTROL_L | ModifierFlag::NONE,
				ConsumerKeyCode::VOLUME_UP
			</autogen>
			<autogen>
				__KeyToKey__
				KeyCode::ENTER, ModifierFlag::CONTROL_L | ModifierFlag::NONE,
				ConsumerKeyCode::VOLUME_MUTE
			</autogen>
		</item>
		<item>
			<name>Left Ctrl + Keypad 4/5/6 as Media Playback keys</name>
			<identifier>private.LCtrlKeypadMusic</identifier>
			<appendix>&#x27e6;4&#x27e7;: &#x25c4;&#x25c4;    Prev</appendix>
			<appendix>&#x27e6;5&#x27e7;: &#x25b6;&#x2161;    Play/Pause</appendix>
			<appendix>&#x27e6;6&#x27e7;: &#x25ba;&#x25ba;    Next</appendix>
			<autogen>
				__KeyToKey__
				KeyCode::KEYPAD_4, ModifierFlag::CONTROL_L | ModifierFlag::NONE,
				ConsumerKeyCode::MUSIC_PREV
			</autogen>
			<autogen>
				__KeyToKey__
				KeyCode::KEYPAD_5, ModifierFlag::CONTROL_L | ModifierFlag::NONE,
				ConsumerKeyCode::MUSIC_PLAY
			</autogen>
			<autogen>
				__KeyToKey__
				KeyCode::KEYPAD_6, ModifierFlag::CONTROL_L | ModifierFlag::NONE,
				ConsumerKeyCode::MUSIC_NEXT
			</autogen>
		</item>
	</item>
</root>
